<!DOCTYPE html>
<html>
  <head>
    <title>Polyrun</title>
    <link rel="icon" href="favicon.png">
    <meta name="theme-color" content="#222">
    <meta name="apple-mobile-web-app-capable" content="yes">
    <meta name="apple-mobile-web-app-status-bar-style" content="black-translucent">
    <meta name="viewport" content="width=device-width, initial-scale=1"></meta>
    <script src='https://api.tiles.mapbox.com/mapbox-gl-js/v0.45.0/mapbox-gl.js'></script>
    <link href='https://api.tiles.mapbox.com/mapbox-gl-js/v0.45.0/mapbox-gl.css' rel='stylesheet' />
    <link rel="stylesheet" type="text/css" href="app.css">
  </head>

  <body>
    <div id='map' data-tracks='<%- JSON.stringify(mapData.tracks) %>' data-dist='<%= mapData.total_dist %>'></div>
    <a href="/upload" title="Upload track"><div class="Btn uploadBtn"><span>⏏</span></div></a>
    <div id="sidebarBtn" class="Btn sidebarBtn"><span>≔</span></div>
    <div id="sidebar">
      <h4 id="distDisplay">Distance tracked: </h4>
      <div id="toggleTheme"></div>
    </div>

    <script src="./js/config.js"></script>
    <script src="./js/src.js"></script>
  </body>
</html>